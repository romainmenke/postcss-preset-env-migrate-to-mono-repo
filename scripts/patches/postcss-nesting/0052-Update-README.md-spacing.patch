 ]).process(YOUR_CSS, /* options */);
 ```
 
@@ -75,13 +75,13 @@ Use [PostCSS Nesting] in your Gulpfile:
 var postcss = require('gulp-postcss');
 
 gulp.task('css', function () {
-	return gulp.src('./src/*.css').pipe(
-		postcss([
-			require('postcss-nesting')({ /* options */ })
-		])
-	).pipe(
-		gulp.dest('.')
-	);
+  return gulp.src('./src/*.css').pipe(
+    postcss([
+      require('postcss-nesting')({ /* options */ })
+    ])
+  ).pipe(
+    gulp.dest('.')
+  );
