 .travis.yml  |  2 +-
 index.js     | 14 ++++++++++++--
 package.json | 11 ++++++-----
 4 files changed, 36 insertions(+), 27 deletions(-)

diff --git a/.tape.js b/.tape.js
index 695808f..e38dd1b 100644
--- a/.tape.js
+++ b/.tape.js
@@ -1,22 +1,20 @@
 module.exports = {
-	'postcss-nesting': {
-		'basic': {
-			message: 'supports basic usage'
-		},
